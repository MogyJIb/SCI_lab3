@model lab3.ViewModels.TourKindViewModel

@{
    ViewData["Title"] = "Tour Kinds";
}

<style type="text/css">
    th, td {
        padding-right: 15px;
    }
</style>

<hr style="border-top: 3px double #8c8b8b;" />
<div>

    <form class="form-inline" method="post" style="margin:0px auto; width:300px;">
        @if (Model.TourKind != null)
        {
            @Html.Label("Name:")
            @Html.TextBox("Name", Model.TourKind.Name)
            <br />

            @Html.Label("Constraints:")
            @Html.TextBox("Constraints", Model.TourKind.Constraints)
            <br />

            @Html.Label("Description:")
            @Html.TextBox("Description", Model.TourKind.Description)
            <br />
        }
        else
        {
            @Html.Label("Name:")
            @Html.TextBox("Name")
            <br />

            @Html.Label("Constraints:")
            @Html.TextBox("Constraints")
            <br />

            @Html.Label("Description:")
            @Html.TextBox("Description")
            <br />
        }

        <input type="submit" value="Add" />
    </form>
</div>
<div style="clear:both"></div>
<hr style="border-top: 3px double #8c8b8b;" />

<table style="margin:0px auto; width:500px">
    <caption>Tour kinds</caption>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Constraints</th>
    </tr>
    @foreach (var tourKind in Model.TourKinds)
    {
        <tr>
            <td>@tourKind.Name</td>
            <td>@tourKind.Description</td>
            <td>@tourKind.Constraints</td>
        </tr>
    }

</table>


<hr style="border-top: 3px double #8c8b8b;" />

